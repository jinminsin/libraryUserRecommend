<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:padding="10dp"
        android:textSize="25dp"
        android:text="TextView"
        android:id="@+id/c_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:paddingLeft="10dp"
        android:text="TextView"
        android:layout_below="@+id/c_name"
        android:id="@+id/c_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/c_owner"
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:layout_alignBaseline="@+id/c_owner"
        android:layout_alignBottom="@+id/c_owner"
        android:text="TextView"
        android:id="@+id/c_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/c_name"
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:layout_toRightOf="@+id/c_detail"
        android:paddingLeft="10dp"
        android:text="TextView"
        android:id="@+id/c_createDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/bBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/nanumbarungothic"
        android:text="← 돌아가기"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textSize="16dp"
        android:id="@+id/pd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@id/bBtn"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/pd_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:textSize="15dp"
        android:id="@+id/pd_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/pd_title"
        app:layout_constraintLeft_toRightOf="@id/pd_owner"
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:textSize="15dp"
        android:id="@+id/pd_createDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/pd_createDate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:textSize="18dp"
        android:id="@+id/pd_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        />


    <!--경계선!-->
    <View
        android:id="@+id/pdu_line"
        app:layout_constraintTop_toBottomOf="@id/pd_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/pd_comText"
        app:layout_constraintTop_toBottomOf="@id/pdu_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:text="댓글"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/pd_comText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/pdd_line"
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pdd_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/createComment"
        android:orientation="vertical">
    </LinearLayout>


        <EditText
            android:id="@+id/createComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothicbold"
            android:hint="댓글을 입력하는 곳입니다."
            android:textColor="#000"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/commitBtn"/>

        <Button
            android:id="@+id/commitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
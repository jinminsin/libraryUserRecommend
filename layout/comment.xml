<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/commentOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="12dp"
        android:fontFamily="@font/nanumbarungothic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/commentTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/nanumbarungothic"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/delBtn"
        app:layout_constraintTop_toBottomOf="@id/commentOwner" />

    <TextView
        android:id="@+id/commentCreateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="12dp"
        android:fontFamily="@font/nanumbarungothic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentTitle" />

    <Button
        android:id="@+id/delBtn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="삭제"
        android:background="@drawable/border_backbtn"
        android:layout_margin="10dp"
        android:fontFamily="@font/nanumbarungothic"
        app:layout_constraintLeft_toRightOf="@id/commentTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/commentCreateDate"/>

    <View
        android:id="@+id/commentLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toBottomOf="@id/commentCreateDate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
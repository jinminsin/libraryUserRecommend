<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:id="@+id/pm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothic"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="10dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:textSize="10dp"
        android:layout_toRightOf="@id/pm_title"
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:text="TextView"
        android:id="@+id/pm_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:textSize="10dp"
        android:layout_toRightOf="@id/pm_sub"
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:text="TextView"
        android:id="@+id/pm_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:textSize="10dp"
        android:layout_below="@id/pm_sub"
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:text="TextView"
        android:id="@+id/pm_crateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:layout_below="@id/pm_sub"
        android:textSize="10dp"
        android:layout_toRightOf="@id/pm_crateDate"
        android:textColor="#000"
        android:fontFamily="@font/nanumbarungothic"
        android:text="TextView"
        android:id="@+id/pm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:layout_marginTop="4dp"
        android:id="@+id/line1"
        android:layout_below="@id/pm_password"
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@id/line1"
        android:id="@+id/korean_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumbarungothic"
        android:text="제목edit"
        android:textColor="#000"
        android:textSize="20dp" />


    <View
        android:layout_marginTop="4dp"
        android:id="@+id/line2"
        android:layout_below="@id/korean_title"
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/korean_subjec"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/korean_title"
        android:fontFamily="@font/nanumbarungothic"
        android:text="내용edit"
        android:textColor="#000"
        android:textSize="20dp" />


    <LinearLayout
        android:id="@+id/yeahh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/korean_subjec"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/cBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/yeahh"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_backbtn"
        android:fontFamily="@font/nanumbarungothicbold"
        android:text="취소"
        android:textSize="20dp" />

</RelativeLayout>